page, .page, .page__bd {
  height: 100%;
}

.page__bd {
  padding-bottom: 0;
}

.weui-navbar {
  background: #fff;
  border-bottom: 2rpx solid #f2f2f2;
}

.navbar_item_customize {
  padding: 8px 0;
}

.navbar_item_customize .weui-navbar__title {
  font-size: 13px;
}

.weui-navbar__slider {
  background-color: #979797;
}

.weui-navbar__item.weui-bar__item_on {
  color: #979797;
}

.weui-tab__panel {
  padding-top: 37px;
}

.order_wrap {
  background: #fff;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.order_basic_info {
  padding: 15rpx 28rpx;
  font-size: 24rpx;
  border-bottom: 1rpx solid #f2f2f2;
}

.order_basic_info .info_text {
  display: inline-block;
}

.order_basic_info button {
  margin-left: 0;
  margin-right: 0;
  padding-left: 24rpx;
  padding-right: 24rpx;
  line-height: 2;
  background: #d0021b;
  color: #fff;
  float: right;
  box-sizing: border-box;
  font-size: 22rpx;
  text-align: center;
  text-decoration: none;
  border-radius: 5px;
}

.order_basic_info text {
  color: #b1b1b1;
  padding-right: 15rpx;
}

.weui-media-box::before {
  content: " ";
  position: absolute;
  left: 15px;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #f2f2f2;
}

.weui-media-box:nth-child(2)::before {
  content: " ";
  position: absolute;
  left: 15px;
  top: 0;
  right: 0;
  height: 0;
  border-top: 0;
}

.weui-media-box__title {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-weight: 400;
  font-size: 12px;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: normal;
  white-space: unset;
}

.weui-media-box__desc {
  line-height: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.info_price {
  display: inline-block;
  font-size: 12px;
  color: #f00;
}

.info_amount {
  display: inline-block;
  color: #999;
  font-size: 10px;
  margin-left: 20rpx;
}
