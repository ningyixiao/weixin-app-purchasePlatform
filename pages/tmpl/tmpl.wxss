/* 需要自定义一个外层来作为容器，在最后三个样式加上自定义外层的类名 */

.module_wrap {
  margin-top: 20rpx;
  background: #fff;
}

.weui-media-box::before {
  content: " ";
  position: absolute;
  left: 30rpx;
  top: 0;
  right: 30rpx;
  border-top: 1rpx solid #f2f2f2;
}

.weui-media-box:nth-child(1)::before {
  content: " ";
  position: absolute;
  left: 30rpx;
  top: 0;
  right: 30rpx;
  border-top: 1rpx solid #fff;
}

.weui-media-box__title {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-weight: 400;
  font-size: 12px;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: normal;
  white-space: unset;
}

.weui-media-box__desc {
  line-height: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.module_wrap .info_price {
  display: inline-block;
  font-size: 12px;
  color: #f00;
}

.module_wrap .item {
  padding: 30rpx 36rpx;
}

.module_wrap .item_pic {
  margin-right: 36rpx;
}
